<% content_for :title, "権限管理" %>

<div class="admin-permissions-index">
  <div class="admin-header-section">
    <h1>権限管理</h1>
    <p>システムで利用可能な権限の一覧です。権限は各ロールに割り当てることで機能します。</p>
  </div>

  <div class="permissions-sections">
    <% @permissions_by_resource.each do |resource_type, permissions| %>
      <div class="permissions-section">
        <h2><%= resource_type %> 権限</h2>
        
        <div class="permissions-grid">
          <% permissions.each do |permission| %>
            <div class="permission-card">
              <div class="permission-header">
                <h3>
                  <%= link_to permission.name, admin_permission_path(permission), class: "permission-link" %>
                </h3>
                <div class="permission-stats">
                  <span class="stat">ロール: <%= permission.roles.count %></span>
                </div>
              </div>
              
              <p class="permission-description"><%= permission.description %></p>
              
              <div class="permission-details">
                <div class="detail-item">
                  <strong>リソース:</strong> <%= permission.resource_type %>
                </div>
                <div class="detail-item">
                  <strong>アクション:</strong> <%= permission.action %>
                </div>
              </div>
              
              <% if permission.roles.any? %>
                <div class="permission-roles">
                  <strong>使用しているロール:</strong>
                  <div class="roles-list">
                    <% permission.roles.each do |role| %>
                      <span class="role-badge <%= 'system' if role.system_role %>">
                        <%= link_to role.name, admin_role_path(role) %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% else %>
                <div class="no-roles">
                  <span class="text-muted">どのロールでも使用されていません</span>
                </div>
              <% end %>
              
              <div class="permission-actions">
                <%= link_to "詳細", admin_permission_path(permission), class: "btn btn-sm" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @permissions_by_resource.empty? %>
    <div class="empty-state">
      <p>権限がありません。</p>
    </div>
  <% end %>
</div>