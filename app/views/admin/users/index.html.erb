<% content_for :title, "ユーザー管理" %>

<div class="admin-users-index">
  <div class="admin-header-section">
    <h1>ユーザー管理</h1>

    <div class="admin-actions">
      <%= form_with url: admin_users_path, method: :get, local: true, class: "search-form" do |form| %>
        <%= form.text_field :search, placeholder: "メールまたは名前で検索", value: params[:search] %>
        <%= form.submit "検索", class: "btn btn-primary" %>
      <% end %>
      <% if can_write?('User') %>
        <%= link_to "新しいユーザー", new_admin_user_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="users-table-container">
    <table class="admin-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>メール</th>
          <th>名前</th>
          <th>ロール</th>
          <th>登録日</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.name.presence || "未設定" %></td>
            <td>
              <% if user.roles.any? %>
                <% user.roles.each do |role| %>
                  <span class="role-badge <%= 'system' if role.system_role %>">
                    <%= role.name %>
                  </span>
                <% end %>
              <% else %>
                <span class="text-muted">なし</span>
              <% end %>
            </td>
            <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
            <td class="actions">
              <%= link_to "詳細", admin_user_path(user), class: "btn btn-sm" %>
              <% if can_write?('User') %>
                <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-sm btn-outline" %>
                <%= link_to "ロール", admin_user_roles_path(user), class: "btn btn-sm btn-outline" %>
              <% end %>
              <% if can_delete?('User') %>
                <%= link_to "削除", admin_user_path(user), method: :delete,
                           class: "btn btn-sm btn-danger",
                           data: { confirm: "本当に削除しますか？" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @users.empty? %>
      <div class="empty-state">
        <p>ユーザーが見つかりませんでした。</p>
      </div>
    <% end %>
  </div>
</div>
