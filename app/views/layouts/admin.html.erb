<!DOCTYPE html>
<html>
  <head>
    <title>Hobo - 管理者画面</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin/layout", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin/components", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin/dashboard", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin/forms", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin/users", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin/roles", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin/permissions", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="admin-header">
      <div class="container">
        <nav class="admin-nav">
          <%= link_to "Hobo Admin", admin_root_path, class: "admin-logo" %>
          
          <ul class="admin-nav-items">
            <li><%= link_to "ダッシュボード", admin_root_path, class: ("active" if current_page?(admin_root_path)) %></li>
            <li><%= link_to "ユーザー", admin_users_path, class: ("active" if controller_name == "users") %></li>
            <li><%= link_to "ロール", admin_roles_path, class: ("active" if controller_name == "roles") %></li>
            <li><%= link_to "権限", admin_permissions_path, class: ("active" if controller_name == "permissions") %></li>
          </ul>
          
          <div class="admin-user-menu">
            <span>管理者: <%= current_user.user_name %></span>
            <%= link_to "メイン画面", root_path, class: "btn btn-outline" %>
            <%= link_to "ログアウト", logout_path, method: :delete, class: "btn btn-outline" %>
          </div>
        </nav>
      </div>
    </header>

    <main class="admin-main">
      <div class="container">
        <% if notice %>
          <div class="notification success"><%= notice %></div>
        <% end %>
        <% if alert %>
          <div class="notification error"><%= alert %></div>
        <% end %>
        <% flash.each do |type, message| %>
          <div class="notification <%= type %>"><%= message %></div>
        <% end %>
        
        <%= yield %>
      </div>
    </main>
  </body>
</html>